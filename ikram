
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

//--------------------------------------------------
//-------------structure list pos ---------------
//--------------------------------------------------

typedef struct maillon {
	int info; 
	struct maillon *suiv ; 
}liste ;

//--------------------------------------------------
//-------------structure arbre----------------------
//--------------------------------------------------

typedef struct node{
char mot [20] ;
struct node *left;
struct node *right; } arbre;

// ---------------------------------------------------------le cas ou le mot n'existe pas dans l'arbre----------------------------------------------------------
//--------------------------------------------------
//-------------allocation d'un noued ---------------
//--------------------------------------------------
arbre *allouer(char *word  ){
	arbre *nouv= (arbre*)malloc(sizeof(arbre)); 
	if (nouv==NULL){
		printf("erreur "); 
	}
strcpy( nouv->mot , word); 
nouv->left = NULL; 
nouv->right = NULL; 
return nouv ; 
} 
//--------------------------------------------------
//------------------------------------------------------------------------insertion-----------------------------------------------------------------------------------
//--------------------------------------------------
void insertion (arbre *R , char *mot){
arbre *nouv ; 
 
	if (R==NULL){
		// la cas ou l'arbre est vide / le pointeur déplacé à la fin
		nouv =  allouer(mot);
		R= nouv ;
		return ;  
	}else {
		// le cas d'insertion 
		if (strcmp(R->mot ,mot  )) {
		   // R->mot > mot => fils droite
		      insertion (R->right,mot); 
		}else {
		   // R->mot <= mot => fils gauche
		      insertion (R->left,mot); 
}}}

main(){
 
 
 FILE *F ; 
 F =fopen("fichierTP.txt","rb"); 

}
