arbre *creation(char *word  ){
	arbre *nouv= (arbre*)malloc(sizeof(arbre)); 
	if (nouv==NULL){
		printf("erreur ");// tester si mon noeud a été bien allouer ou nn  
	}
strcpy( nouv->mot , word); // nouv-> = word 
nouv->left = NULL; 
nouv->right = NULL; 
return nouv ; 
} 
